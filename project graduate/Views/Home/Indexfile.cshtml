        </div>

        <div>

            <textarea class="form-control" asp-for="Encryptfile" placeholder="DNA Text" readonly style=" width: 500px; height: 300px; margin-right: 70px;float:right; background-color: darkgray; color: black"></textarea>
            <!--  <input asp-for="cryptomsg" class="form-control" /> -->
        </div>

        <div class="form-group row">

            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="button" class="btn btn-primary" style="float:right;background-color:bisque;">@Html.ActionLink("save as File", "DownloadEncryptDocument")</button>

                </div>
            </div>
        </div>
    </form>
    </div>
