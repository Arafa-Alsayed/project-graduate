@model project_graduate.Models.fileclass
<div style="margin-top:100px">

</div>
<div style="background-color:white">
    <form asp-controller="Home" asp-action="Indexfile" method="post" enctype="multipart/form-data">
        <div class="form-group">

            <input type="file" asp-for="File" style="margin-left:50px;position:center;display:inline" />

            <button type="submit" class="btn btn-primary" style="display:inline">encrypt</button>

        </div>
        <div style="height:50px">
            <input type="text" asp-for="key"placeholder="must enter 16 digit" style="margin-left:790px;"/>
